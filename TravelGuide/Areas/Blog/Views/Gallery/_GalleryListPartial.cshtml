@model TravelGuide.Areas.Blog.ViewModels.GalleryListViewModel

@{
    ViewBag.Title = "_GalleryListPartial";
}

<div class="row">
    @foreach (var image in Model.Images)
            {
        <div class="col-md-3 img-column">
            <a href="#">
                <div class="gallery-item tooltipped" data-position="top" data-delay="50" data-tooltip="@image.Title" style="background-image: url('@image.ImageUrl');">
                    <div class="image-info text-right">
                        <div class="col-md-3 col-md-offset-6 text-right"><span class="glyphicon glyphicon-thumbs-up"></span> @image.LikesCount</div>
                        <div class="col-md-3 text-center"><span class="glyphicon glyphicon-comment"></span> @image.CommentsCount</div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>


<div class="row text-center gallery-pager">
    <ul class="pagination">
        @if (Model.CurrentPage <= 1)
            {
            <li class="page-item disabled">
                <a class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" href="/blog/gallery/index?page=@Model.CurrentPage" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (string.IsNullOrEmpty(Model.Query))
                {
                <li class="page-item"><a class="page-link" href="/blog/gallery/index?page=@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="/blog/gallery/index?page=@i&query=@Model.Query">@i</a></li>
            }
        }

        @if (Model.CurrentPage >= Model.PagesCount)
            {
            <li class="page-item disabled">
                <a class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" href="/blog/gallery/index?page=@Model.NextPage" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</div>

