@model TravelGuide.Areas.Blog.ViewModels.GalleryListViewModel

@{
    ViewBag.Title = "_GalleryListPartial";
}

@if (Model.Images.Count() == 0)
{
    <h5 class="text-center">No results found... Try something else!</h5>
}
else
{
    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-3 img-column">
                <a data-toggle="modal" data-target="#@(image.Id + image.Id.ToString())">
                    <div class="gallery-item tooltipped" data-position="top" data-delay="50" data-tooltip="@image.Title" style="background-image: url('@image.ImageUrl');">
                        <div class="image-info text-right">
                            <div class="col-md-3 col-md-offset-6 text-right"><span class="glyphicon glyphicon-thumbs-up"></span> <span id="likes-count">@image.LikesCount</span></div>
                            <div class="col-md-3 text-center"><span class="glyphicon glyphicon-comment"></span> @image.CommentsCount</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <div class="row text-center gallery-pager">
        <ul class="pagination">
            @if (Model.CurrentPage <= 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link waves-effect" href="/blog/gallery/index?page=@Model.PreviousPage" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (string.IsNullOrEmpty(Model.Query))
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active disabled"><a class="page-link white-text">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link waves-effect" href="/blog/gallery/index?page=@i">@i</a></li>
                    }
                }
                else
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active disabled"><a class="page-link white-text" href="/blog/gallery/index?page=@i&query=@Model.Query">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link waves-effect" href="/blog/gallery/index?page=@i&query=@Model.Query">@i</a></li>
                    }
                }
            }

            @if (Model.CurrentPage >= Model.PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link waves-effect" href="/blog/gallery/index?page=@Model.NextPage" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="image-details">
        @foreach (var image in Model.Images)
        {
            <div class="modal fade modal-close" id="@(image.Id + image.Id.ToString())" role="dialog">
                <div class="modal-lg modal-gallery" role="document">
                    <div class="modal-content">
                        <span class="glyphicon glyphicon-remove black-text icon-close-details" data-dismiss="modal"></span>
                        <div class="modal-body container-fluid">
                            <div class="col-md-9 modal-column">
                                <img src="@image.ImageUrl" class="img-responsive modal-img-articles" alt="@image.Title">
                            </div>
                            <div class="col-md-3">
                                <div class="row details-info">
                                    <div class="col-md-3 details-profile-pic">
                                        <img src="https://cdn2.iconfinder.com/data/icons/circle-icons-1/64/profle-256.png" alt="profile-pic" class="img-responsive" />
                                    </div>
                                    <div class="col-md-9 comment-content">
                                        <p class="username-panel">
                                            @image.Username
                                        </p>
                                        <span class="date-panel">@image.CreatedOn</span>
                                        @using (Html.BeginForm("DeleteImage", "Gallery", new { imageId = image.Id }, FormMethod.Post))
                                        {
                                            <input type="submit" onclick="return confirm('Are you sure you want to delete this image?')"
                                                   value="Delete" class="btn-delete" />
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <h5 class="text-center">@image.Title</h5>
                                    <hr />
                                    <div class="col-md-6" id="@(image.Id.ToString() + image.Id.ToString() + image.Id.ToString())">
                                        @Html.Partial("_LikeButtonPartial", image)
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-success black white-text btn-add-comment"><span class="glyphicon glyphicon-comment"></span> Comment</button>
                                    </div>
                                    <hr />
                                </div>
                                <div id="@image.Id" class="row details-comment-box container-fluid">
                                    @Html.Partial("_ImageCommentBoxPartial", image)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}