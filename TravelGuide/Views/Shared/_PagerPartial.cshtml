@model TravelGuide.Shared.IPager

<ul class="pagination">
    @if (Model.CurrentPage <= 1)
            {
        <li class="page-item disabled">
            <a class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
    }
    else
    {
        <li class="page-item">
            <a class="page-link waves-effect" href="@Model.BaseUrl?page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
    }
    @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (string.IsNullOrEmpty(Model.Query))
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active disabled"><a class="page-link white-text">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link waves-effect" href="@Model.BaseUrl?page=@i">@i</a></li>
                    }
        }
        else
        {
            if (i == Model.CurrentPage)
            {
                <li class="page-item active disabled"><a class="page-link white-text">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link waves-effect" href="@Model.BaseUrl?page=@i&query=@Model.Query">@i</a></li>
            }
        }
    }

    @if (Model.CurrentPage >= Model.PagesCount)
            {
        <li class="page-item disabled">
            <a class="page-link" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    }
    else
    {
        <li class="page-item">
            <a class="page-link waves-effect" href="@Model.BaseUrl?page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    }
</ul>

