@model IEnumerable<TravelGuide.ViewModels.AdminPageViewModels.UserViewModel>

<table class="table table-responsive table-bordered table-hover">
    <thead>
        <tr class="table-header-admin">
            <th>Username</th>
            <th>E-Mail</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                @if (user.IsDeleted)
                {
                    <td>Deactivated</td>
                }
                else
                {
                    <td>Active</td>
                }
                <td class="text-center">
                    @using (Ajax.BeginForm("UsersEditForm", "Admin", user,
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "users-edit-box",
                        LoadingElementId = "image-loader",
                        OnBegin = "openModalUsers",
                        OnSuccess = "bindUsersEditEvents"
                    }))
                    {
                        <input type="button" id="activate-modal-users" data-toggle="modal" data-target="#users-edit-box" style="display:none;" />
                        <input type="submit" class="btn btn-black"  value="Edit Info" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>