@model TravelGuide.ViewModels.ManageViewModels.IndexViewModel

<div>
    <h4 class="text-center">Requests</h4>
    @if (Model.Requests.Count() == 0)
    {
        <h6>No requests submitted as of yet...</h6>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="no-padding"></th>
                    <th class="text-center">Product Name</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Ordered On:</th>
                </tr>
            </thead>
            @foreach (var item in Model.Requests)
            {
                <tr>
                    <td class="text-center no-padding"><img src="@item.StoreItem.ImageUrl" alt="@item.StoreItem.ItemName" class="img-request-profile" /></td>
                    <td class="text-center"><a href="/store/storeitems/details/@item.StoreItemId">@item.StoreItem.ItemName</a></td>
                    <td class="text-center">@item.Status</td>
                    <td class="text-center">@item.CreatedOn</td>
                </tr>
            }
        </table>
        @Html.Partial("_PagerPartial", Model)
    }
</div>