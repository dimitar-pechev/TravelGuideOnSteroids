@{
    ViewBag.Title = "Home";
}

<div class="row">
    <img src="~/App_Themes/landing-page-kotor-1920-960.png" alt="boka-kotorska-travel-guide" class="img-landing-page" />
</div>
<div class="container">
    <div class="card card-main-page">
        <div class="card-content text-center">
            <h4>Get the best tips on your vacation</h4>
            <div class="row">
                <div class="col-md-4">
                    <a href="/articles">
                        <div class="card card-nav">
                            <div class="card-content img-cont">
                                <img src="/App_Themes/1.jpg" class="img-responsive" alt="Alternate Text" />
                            </div>
                            <div class="card-content text-center nav-text">
                                <p>Read on our destinations</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/blog/gallery">
                        <div class="card card-nav">
                            <div class="card-content img-cont">
                                <img src="/App_Themes/2.jpg" class="img-responsive" alt="Alternate Text" />
                            </div>
                            <div class="card-content text-center nav-text">
                                <p>Share with us your photos</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/store/storeitems">
                        <div class="card card-nav">
                            <div class="card-content img-cont">
                                <img src="~/App_Themes/3.jpg" class="img-responsive" alt="Alternate Text" />
                            </div>
                            <div class="card-content text-center nav-text">
                                <p>Browse through our trip products</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>